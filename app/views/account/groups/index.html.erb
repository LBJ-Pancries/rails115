<div class="col-md-12">
  <h2 class="text-center"> 我加入的讨论版 </h2>
  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th width="150">Movie Pic</th>
        <th> Title </th>
        <th> Description </th>
        <th> Post Count </th>
        <th> Last Update </th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td> <%= group.id %> </td>
          <td>
            <%= link_to group_path(group) do %>
              <% if group.image.present? %>
                <%= image_tag(group.image.thumb.url, class: "thumbnail") %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
            <% end %>
          </td>
          <td> <%= link_to(group.title, group_path(group)) %> </td>
          <td> <%= group.description %> </td>
          <td> <%= group.posts.count %> </td>
          <td> <%= group.updated_at %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
